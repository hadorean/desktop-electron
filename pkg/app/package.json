{
  "name": "heyketsu",
  "version": "0.1.49",
  "description": "A peaceful space for your desktop and browser",
  "main": "./out/main/index.js",
  "author": "Hadrien Grandry",
  "homepage": "https://hgrandry.net",
  "repository": {
    "type": "git",
    "url": "https://github.com/hgrandry/desktop-electron.git"
  },
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev:electron": "electron-vite dev",
    "dev": "concurrently --kill-others --names \"CLIENT,ELECTRON\" --prefix-colors \"blue,green\" \"npm run dev:client:start\" \"npm run dev:electron:start\"",
    "dev:client:start": "cd ../client && npm run dev",
    "dev:electron:start": "concurrently --kill-others --names \"WATCH-SHARED,ELECTRON\" --prefix-colors \"magenta,green\" \"node ../../scripts/wait-for-client.js && cross-env NODE_ENV=development npm run dev:electron\"",
    "dev:templates:watch": "nodemon --watch src/main/templates --ext ejs --exec \"echo Templates changed - refresh browser\"",
    "dev:client:build": "cd ../client && npm run build",
    "build": "npm run typecheck && electron-vite build && npm run copy-shared",
    "copy-shared": "node ../../scripts/copy-shared.js",
    "build:client": "cd ../client && npm run build",
    "build:demo": "cd ../client && npm run build:demo",
    "build:web": "cd ../client && npm run build:web",
    "build:all": "npm run build:client && npm run build",
    "build:unpack": "npm run build:all && electron-builder --dir",
    "build:win": "npm run build:all && electron-builder --win",
    "build:mac": "npm run build:all && electron-builder --mac",
    "build:linux": "npm run build:all && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/ejs": "^3.1.5",
    "@types/sharp": "^0.31.1",
    "@types/socket.io": "^3.0.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "electron-as-wallpaper": "^2.0.3",
    "electron-updater": "^6.3.9",
    "express": "^5.1.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.16.5",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "daisyui": "^3.9.4",
    "electron": "^37.2.3",
    "tailwindcss": "^3.3.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.11.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "autoprefixer": "^10.4.16",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.36.10",
    "svelte-check": "^4.3.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "wait-on": "^8.0.4"
  }
}
