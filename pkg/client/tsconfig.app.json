{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"composite": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"$shared": ["../shared/src"],
			"$shared/*": ["../shared/src/*"],
			"$stores/*": ["./src/lib/stores/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"../shared/src/**/*.ts",
		"../shared/src/**/*.svelte"
	]
}
