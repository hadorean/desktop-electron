{
	"version": "0.2.0",
	"default": "Debug Full Dev Environment",
	"configurations": [
		{
			"name": "Start Shared (TypeScript)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["dev:shared"],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"presentation": {
				"group": "dev",
				"order": 1
			}
		},
		{
			"name": "Start Client (Vite)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["dev:client"],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"presentation": {
				"group": "dev",
				"order": 2
			}
		},
		{
			"name": "Debug Electron Main Process",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}/pkg/app",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite",
			"windows": {
				"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite.cmd"
			},
			"runtimeArgs": ["dev", "--sourcemap"],
			"env": {
				"REMOTE_DEBUGGING_PORT": "9222",
				"NODE_ENV": "development"
			},
			"presentation": {
				"group": "debug",
				"order": 1
			}
		},
		{
			"name": "Debug Renderer Process",
			"port": 9222,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}/pkg/app/src/renderer",
			"timeout": 60000,
			"presentation": {
				"group": "debug",
				"order": 2,
				"hidden": true
			}
		},
		{
			"name": "Start Full Dev Environment (Terminal)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["dev"],
			"cwd": "${workspaceRoot}",
			"console": "integratedTerminal",
			"presentation": {
				"group": "simple",
				"order": 1
			}
		}
	],
	"compounds": [
		{
			"name": "Debug Full Dev Environment",
			"configurations": ["Start Shared (TypeScript)", "Start Client (Vite)", "Debug Electron Main Process", "Debug Renderer Process"],
			"presentation": {
				"order": 1
			},
			"stopAll": true
		},
		{
			"name": "Debug Electron Only",
			"configurations": ["Debug Electron Main Process", "Debug Renderer Process"],
			"presentation": {
				"order": 2
			},
			"stopAll": true
		}
	]
}
