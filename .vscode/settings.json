{
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "svelte"
  ],
  "files.exclude": {
    "nul": false,
    ".gitignore": false,
    "client/package-lock.json": false,
    "client/postcss.config.cjs": false,
    "client/vite.demo.config.ts": false,
    "client/vite.config.ts": false,
    "client/tsconfig.node.json": false,
    "client/tsconfig.json": false,
    "client/svelte.config.js": false,
    "client/tsconfig.app.json": false,
    "app/.prettierignore": false,
    "app/.prettierrc.yaml": false,
    "app/.editorconfig": false,
    "app/dev-app-update.yml": false,
    "app/electron-builder.yml": false,
    "app/electron.log": false,
    "app/electron.vite.config.ts": false,
    "app/eslint.config.mjs": false,
    "app/package-lock.json": false,
    "app/svelte.config.mjs": false,
    "app/tsconfig.json": false,
    "app/tsconfig.node.json": false,
    "app/tsconfig.web.json": false,
    "client/tailwind.config.cjs": false,
    "client/.gitignore": false,
    "client/.env.production": false,
    "client/.env": false,
    "app/dist": false,
    "app/out": false,
    "client/dist": false,
    "client/.vite": false,
    "client/demo-dist": false
  }
}
