{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "explicit"
	},
	"prettier.requireConfig": false,
	"prettier.useEditorConfig": false,
	"prettier.enable": true,
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svelte]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"svelte.enable-ts-plugin": false,
	"svelte.plugin.svelte.defaultScriptLanguage": "ts",
	"svelte.plugin.svelte.enable": true,
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"typescript.preferences.includePackageJsonAutoImports": "on",
	"typescript.suggest.autoImports": true,
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.format.enable": false,
	"search.exclude": {
		"node_modules/**": true,
		"**/node_modules/**": true,
		"**/pkg/*/node_modules/**": true,
		"**/dist/**": true,
		"**/out/**": true,
		"**/.git/**": true,
		"**/pnpm-lock.yaml": true,
		"**/package-lock.json": true,
		"**/yarn.lock": true
	},
	"files.exclude": {
		"**/node_modules": false,
		"**/pkg/*/node_modules": true
	},
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"eslint.enable": true,
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "svelte"],
	"eslint.workingDirectories": ["pkg/shared", "pkg/client", "pkg/app"],
	"eslint.options": {
		"cache": true
	},
	"eslint.run": "onType"
}
