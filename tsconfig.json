{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"$shared/*": ["./pkg/shared/src/*"],
			"@heyketsu/shared": ["./pkg/shared/src"],
			"@heyketsu/shared/*": ["./pkg/shared/src/*"]
		}
	},
	"include": [
		"pkg/app/src/**/*.ts",
		"pkg/app/src/**/*.js",
		"pkg/app/src/**/*.svelte",
		"pkg/app/src/**/*.d.ts",
		"pkg/client/src/**/*.ts",
		"pkg/client/src/**/*.js",
		"pkg/client/src/**/*.svelte",
		"pkg/client/src/**/*.d.ts",
		"pkg/shared/src/**/*.ts",
		"pkg/shared/src/**/*.js",
		"pkg/shared/src/**/*.svelte",
		"pkg/shared/src/**/*.d.ts"
	],
	"exclude": ["node_modules", "**/node_modules", "dist", "out", "**/dist", "**/out"]
}
