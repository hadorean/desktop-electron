{
  "name": "heyketsu",
  "version": "1.0.0",
  "description": "A peaceful space for your desktop and browser",
  "main": "./out/main/index.js",
  "author": "Hadrien Grandry",
  "homepage": "https://hgrandry.net",
  "workspaces": [
    "pkg/*"
  ],
  "scripts": {
    "build:shared": "cd pkg/shared && npm run build",
    "build:client": "cd pkg/client && npm run build",
    "build:app": "cd pkg/app && npm run build",
    "build:all": "npm run build:shared && npm run build:client && npm run build:app",
    "dev": "concurrently --kill-others --names \"CLIENT,ELECTRON\" --prefix-colors \"blue,green\" \"npm run dev:client\" \"npm run dev:app\"",
    "dev:client": "cd pkg/client && npm run dev",
    "dev:app": "cd pkg/app && npm run dev:electron:start",
    "format": "cd pkg/app && prettier --plugin prettier-plugin-svelte --write .",
    "lint": "cd pkg/app && eslint --cache .",
    "typecheck": "cd pkg/app && npm run typecheck",
    "start": "cd pkg/app && electron-vite preview",
    "package:unpack": "npm run build:all && cd pkg/app && electron-builder --dir",
    "package:win": "npm run build:all && cd pkg/app && electron-builder --win",
    "package:mac": "npm run build:all && cd pkg/app && electron-builder --mac",
    "package:linux": "npm run build:all && cd pkg/app && electron-builder --linux"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.16.5",
    "autoprefixer": "^10.4.16",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "daisyui": "^3.9.4",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.11.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.36.10",
    "svelte-check": "^4.3.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "wait-on": "^8.0.4"
  }
}
