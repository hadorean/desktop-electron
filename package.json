{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "An Electron application with Svelte and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "workspaces": [
    "app",
    "client"
  ],
  "scripts": {
    "format": "cd app && prettier --plugin prettier-plugin-svelte --write .",
    "lint": "cd app && eslint --cache .",
    "typecheck:node": "cd app && tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "cd app && svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "cd app && npm run typecheck:node && npm run svelte-check",
    "start": "cd app && electron-vite preview",
    "dev:electron": "cd app && electron-vite dev",
    "dev": "concurrently --kill-others --names \"CLIENT,ELECTRON\" --prefix-colors \"blue,green\" \"npm run dev:client:start\" \"npm run dev:electron:start\"",
    "dev:client:start": "cd client && npm run dev",
    "dev:electron:start": "cd app && npm run dev:electron:start",
    "dev:templates:watch": "nodemon --watch app/src/main/templates --ext ejs --exec \"echo Templates changed - refresh browser\"",
    "dev:client:build": "cd client && npm run build",
    "build:app": "cd app && npm run typecheck && electron-vite build",
    "build:client": "cd client && npm run build",
    "build:client:demo": "cd client && npm run build:demo",
    "build:client:web": "cd client && npm run build:web",
    "build:all": "cd app && npm run build:all",
    "app:postinstall": "cd app && npm run postinstall",
    "build:app:unpack": "cd app && npm run build:unpack",
    "build:app:win": "cd app && npm run build:win",
    "build:app:mac": "cd app && npm run build:mac",
    "build:app:linux": "cd app && npm run build:linux"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.16.5",
    "autoprefixer": "^10.4.16",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "daisyui": "^3.9.4",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.11.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.36.10",
    "svelte-check": "^4.3.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "wait-on": "^8.0.4"
  }
}
