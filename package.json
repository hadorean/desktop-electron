{
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"reinstall": "node scripts/clean-install.js",
		"build:shared": "cd pkg/shared && pnpm build",
		"build:client": "cd pkg/client && pnpm build",
		"build:app": "cd pkg/app && pnpm build",
		"build:all": "pnpm build:shared && pnpm build:client && pnpm build:app",
		"dev": "concurrently --kill-others --names \"SHARED,CLIENT,ELECTRON\" --prefix-colors \"yellow,blue,green\" \"pnpm dev:shared\" \"pnpm dev:client\" \"pnpm dev:app\"",
		"dev:shared": "cd pkg/shared && pnpm dev",
		"dev:client": "cd pkg/client && pnpm dev",
		"dev:web": "concurrently --kill-others --names \"SHARED,CLIENT\" --prefix-colors \"yellow,blue\" \"pnpm dev:shared\" \"pnpm dev:client\"",
		"dev:app": "cd pkg/app && pnpm dev:electron:start",
		"format": "prettier --plugin prettier-plugin-svelte --write .",
		"lint": "eslint --cache .",
		"lint:app": "eslint --cache pkg/app",
		"lint:client": "eslint --cache pkg/client",
		"lint:shared": "eslint --cache pkg/shared",
		"typecheck": "pnpm typecheck:ts && pnpm typecheck:shared && pnpm typecheck:client && pnpm typecheck:app",
		"typecheck:app": "cd pkg/app && pnpm svelte-check",
		"typecheck:client": "cd pkg/client && pnpm svelte-check",
		"typecheck:shared": "cd pkg/shared && pnpm svelte-check",
		"typecheck:ts": "tsc --noEmit --noUnusedLocals --noUnusedParameters -p tsconfig.json",
		"start": "cd pkg/app && electron-vite preview",
		"package:unpack": "pnpm build:all && cd pkg/app && electron-builder --dir",
		"package:win": "pnpm build:all && cd pkg/app && electron-builder --win",
		"package:mac": "pnpm build:all && cd pkg/app && electron-builder --mac",
		"package:linux": "pnpm build:all && cd pkg/app && electron-builder --linux",
		"version": "node scripts/version.js",
		"publish": "node scripts/publish.js",
		"delete-tags": "node scripts/delete-tags.js",
		"remote-build": "node scripts/gh-build.js",
		"generate-icons": "node scripts/generate-icons.js"
	},
	"dependencies": {
		"@hgrandry/dbg": "0.1.10",
		"@tweenjs/tween.js": "^25.0.0",
		"tailwind-variants": "^2.1.0"
	},
	"devDependencies": {
		"@electron-toolkit/eslint-config-prettier": "^3.0.0",
		"@electron-toolkit/eslint-config-ts": "^3.0.0",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/package": "^2.3.8",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/postcss": "^4.1.12",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.0",
		"@tsconfig/svelte": "^5.0.4",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^22.16.5",
		"bits-ui": "^2.8.6",
		"chalk": "^4.1.2",
		"chokidar": "^4.0.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0",
		"electron": "^37.3.1",
		"electron-builder": "^25.1.8",
		"electron-vite": "^4.0.0",
		"eslint": "^9.31.0",
		"eslint-plugin-svelte": "^3.11.0",
		"lucide-svelte": "^0.539.0",
		"nodemon": "^3.1.10",
		"png-to-ico": "^2.1.8",
		"postcss": "^8.4.31",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.5.0",
		"rimraf": "^6.0.1",
		"shadcn-svelte": "^1.0.6",
		"sharp": "^0.34.0",
		"svelte": "^5.38.1",
		"svelte-check": "^4.3.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^2.1.0",
		"tailwindcss": "^4.1.12",
		"tw-animate-css": "^1.3.7",
		"typescript": "^5.8.3",
		"vite": "^7.1.2",
		"wait-on": "^8.0.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"@tailwindcss/oxide",
			"electron-as-wallpaper",
			"sharp",
			"svelte-preprocess"
		]
	}
}
